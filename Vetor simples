#include <stdio.h>
#include <locale.h>
#include <string.h>
#include <math.h>


int main(){
    setlocale(LC_ALL, "Portuguese");

    float notas[60];
    int i;

    for(i=0;i<60;i++){
        printf("Nota do %iº aluno: ",i+1);
        scanf("%f",&notas[i]);
        printf("A nota é: %.1f \n",notas[i]);
    }

    return 0;
}
