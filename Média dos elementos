#include <stdio.h>
#include <locale.h>
#include <string.h>
#include <math.h>


int main(){
    setlocale(LC_ALL, "Portuguese");

    int i;
    float v[10], media, soma=0;

    for(i=0;i<10;i++){
        printf("Digite um nÃºmero: ");
        scanf("%f",&v[i]);
        soma = soma+v[i];
    }

    media = soma/10;
    printf("\nSoma: %.0f",soma);
    printf("\nMedia: %.1f",media);

    return 0;
}
